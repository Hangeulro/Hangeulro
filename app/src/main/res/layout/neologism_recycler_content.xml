<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:id="@+id/neologismContentCardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:cardBackgroundColor="#FFF"
        app:cardCornerRadius="4dp"
        app:cardElevation="4dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="12dp">

                <kr.edcan.neologism.views.RoundImageView
                    android:id="@+id/neologismContentProfile"
                    android:layout_width="40dp"
                    android:layout_height="40dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/neologismContentTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="asdf"
                        android:textColor="@color/textColorDark"
                        android:textSize="15dp" />

                    <TextView
                        android:id="@+id/neologismContentDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="asdf"
                        android:textColor="@color/textColorDark"
                        android:textSize="12dp" />
                </LinearLayout>
            </LinearLayout>

            <com.android.volley.toolbox.NetworkImageView
                android:id="@+id/neologismContentImage"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/neologismContentText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="aaasdfaaasdfaaasdfaaasdfaaasdfaaasdfaaasdfaaasdfaaasdfaaasdfaaasdfaaasdfaaasdfaaasdfaaasdfaaasdfaaasdfaaasdfaaasdfaaasdf"
                android:textColor="@color/textColorSubDark" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="8dp"
                android:paddingRight="16dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/neologismContentLike"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:src="@drawable/ic_board_like" />

                    <ImageView
                        android:id="@+id/neologismContentUnlike"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:src="@drawable/ic_board_unlike" />
                </LinearLayout>

                <TextView
                    android:id="@+id/neologismContentCommentInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="asdf"
                    android:textColor="@color/textColorSubDark" />
            </RelativeLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>
</layout>