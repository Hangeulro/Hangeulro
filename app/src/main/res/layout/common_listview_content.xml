<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/common_listview_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginBottom="12dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="12dp"
        android:src="@drawable/ic_dic" />

    <TextView
        android:id="@+id/common_listview_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/common_listview_image"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@id/common_listview_image"
        android:text="사전"
        android:textColor="@color/textColor"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/common_listview_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="25dp"
        android:src="@drawable/acc_arrow" />
</RelativeLayout>