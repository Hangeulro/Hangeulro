<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp">

            <kr.edcan.neologism.views.RoundImageView
                android:id="@+id/neologismContentProfile"
                android:layout_width="40dp"
                android:layout_height="40dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/neologismContentTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="asdf"
                    android:textColor="@color/textColorDark"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/neologismContentDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="asdf"
                    android:textColor="@color/textColorDark"
                    android:textSize="12dp" />
            </LinearLayout>
        </LinearLayout>

        <com.android.volley.toolbox.NetworkImageView
            android:id="@+id/neologismContentImage"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/neologismContentText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="10dp"
            android:ellipsize="end"
            android:textColor="@color/textColorSubDark" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="10dp"
            android:background="#223c3c3c" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="8dp"
            android:paddingRight="16dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/neologismContentLike"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:src="@drawable/ic_board_like" />

                <TextView
                    android:id="@+id/neologismContentLikeCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="20"
                    android:textColor="@color/textColorSubDark"
                    android:textSize="15dp" />

                <ImageView
                    android:id="@+id/neologismContentUnlike"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:src="@drawable/ic_board_unlike" />

                <TextView
                    android:id="@+id/neologismContentUnLikeCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="20"
                    android:textColor="@color/textColorSubDark"
                    android:textSize="15dp" />

            </LinearLayout>

            <TextView
                android:id="@+id/neologismContentCommentInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="asdf"
                android:textColor="@color/textColorSubDark" />
        </RelativeLayout>
    </LinearLayout>
</layout>