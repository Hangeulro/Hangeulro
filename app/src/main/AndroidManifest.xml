<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="kr.edcan.neologism">

    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    <uses-permission android:name="android.permission.RESTART_PACKAGES" />

    <application
        android:name=".AppController"
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionbar">
        <activity android:name=".activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <receiver
            android:name=".utils.BootReceiver"
            android:enabled="true"
            android:exported="false"
            android:label="service.BootReceiver">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>

        <service android:name=".utils.ClipBoardService" />

        <activity android:name=".activity.DicMenuActivity" />
        <activity
            android:name=".activity.DicViewActivity"
            android:theme="@style/AppTheme.NoActionbar" />
        <activity android:name=".activity.MyDicActivity" />
        <activity
            android:name=".activity.DicDetailViewActivity"
            android:theme="@style/AppTheme.NoActionbar" />
        <activity android:name=".activity.AuthActivity" />

        <meta-data
            android:name="io.fabric.ApiKey"
            android:value="6c81b4e91b018f9f82dce750f7f07b9723039bb2" />
        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id" />

        <activity android:name=".activity.MyPageActivity"></activity>
    </application>

</manifest>